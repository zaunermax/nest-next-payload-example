{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "Node",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"strict": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src/server/**/*.ts", "payload.config.ts"]
}
